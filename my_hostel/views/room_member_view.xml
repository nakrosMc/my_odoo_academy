<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="room_member_form" model="ir.ui.view">
    <field name="name">room.member.form</field>
    <field name="model">hostel.room.member</field>
    <field name="arch" type="xml">
        <form string="">
            <header>
            </header>
            <sheet>
                <field name="name" placeholder='Your name'/>
            </sheet>
        </form>
    </field>
    </record>

    <record id="room_member_list" model="ir.ui.view">
    <field name="name">room.member.list</field>
    <field name="model">hostel.room.member</field>
    <field name="arch" type="xml">
        <list string="">
            <field name="name" />
        </list>
    </field>
    </record>

    <record id="room_member_action" model="ir.actions.act_window">
    <field name="name">room member</field>
    <field name="res_model">hostel.room.member</field>
    <field name="view_mode">list,form</field>
    </record>
</odoo>
