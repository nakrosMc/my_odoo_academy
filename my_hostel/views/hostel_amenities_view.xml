<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="amenities_view_form" model="ir.ui.view">
        <field name="name">aenities.view.form</field>
        <field name="model">hostel.amenities</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                </header>
                <sheet>
                    <field name="name" />
                    <field name="active" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="amenities_view_list" model="ir.ui.view">
        <field name="name">amenities.view.list</field>
        <field name="model">hostel.amenities</field>
        <field name="arch" type="xml">
            <list string="">
                    <field name="name" />
                    <field name="active" />
            </list>
        </field>
    </record>

    <record id="amenities_menu_action" model="ir.actions.act_window">
        <field name="name">aenities.view.form</field>
        <field name="res_model">hostel.amenities</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>